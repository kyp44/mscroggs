###############################################################################
# FILE: Makefile
#
# Author: Dan Whitman
##############################################################################
TARGET = answers
BOXES = boxes.tex

.PHONY: all clean

#==============================================================================
all: $(BOXES)
#==============================================================================
	pdflatex $(TARGET).tex

#==============================================================================
$(BOXES): dec04.py dec12.py dec20.py
#==============================================================================
	> $@
	$(foreach script, $^, python3 $(script) -c >> $@;)

#==============================================================================
clean:
#==============================================================================
	rm -f *.aux *.log *.pdf *.out *.toc
	rm -f -r *.png figs/
	rm -f -r __pycache__
	rm -f $(BOXES)
