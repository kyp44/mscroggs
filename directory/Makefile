###############################################################################
# FILE: Makefile
#
# Author: Dan Whitman
##############################################################################
TARGET = directory

.PHONY: all help tags clean
TAGS=

#==============================================================================
all:
#==============================================================================
	./build.py $(TAGS) > puzzles.tex
	pdflatex $(TARGET).tex

#==============================================================================
help:
#==============================================================================
	@echo "Run make with TAGS=<CSV Tags> to only include certain tags."
	@echo "Available tags and information on the puzzle sets are:"
	@./build.py -i

#==============================================================================
tags: help
#==============================================================================

#==============================================================================
clean:
#==============================================================================
	rm -f *.aux *.log *.pdf *.out *.toc
	rm -f puzzles.tex
