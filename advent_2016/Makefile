# Author: Dan Whitman
##############################################################################
TARGET = answers
BOXES = boxes.tex

.PHONY: all clean

#==============================================================================
all: $(BOXES)
	pdflatex $(TARGET).tex
#==============================================================================

#==============================================================================
card:
#==============================================================================
	pdflatex card.tex

#==============================================================================
$(BOXES): dec04.py
#==============================================================================
	> $@
	$(foreach script, $^, python3 $(script) -c >> $@;)

#==============================================================================
clean:
#==============================================================================
	rm -f *.aux *.log *.pdf *.out *.toc
	rm -f -r *.png figs/
	rm -f -r __pycache__
