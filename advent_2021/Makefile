###############################################################################
# FILE: Makefile
#
# Author: Dan Whitman
##############################################################################
TARGET = answers
BOXES = boxes.tex

.PHONY: all boxes clean

#==============================================================================
all: boxes
#==============================================================================
	pdflatex $(TARGET).tex

#==============================================================================
card:
#==============================================================================
	pdflatex card.tex

#==============================================================================
boxes:
#==============================================================================
	python3 dec04.py -c > $(BOXES)
	python3 dec10.py -c >> $(BOXES)
	python3 dec18.py -c >> $(BOXES)	

#==============================================================================
clean:
#==============================================================================
	rm -f *.aux *.log *.pdf *.out *.toc
	rm -f -r *.png figs/
	rm -f -r __pycache__
	rm -f $(BOXES)
