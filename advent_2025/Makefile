###############################################################################
# FILE: Makefile
#
# Author: Dan Whitman
##############################################################################
TARGET = answers
BOXES = boxes.tex

.PHONY: all clean py

#==============================================================================
all: $(BOXES)
#==============================================================================
	pdflatex -halt-on-error $(TARGET).tex

#==============================================================================
card:
#==============================================================================
	pdflatex -halt-on-error card.tex

#==============================================================================
$(BOXES): dec06.py dec16.py dec22.py
#==============================================================================
	> $@
	$(foreach script, $^, python3 $(script) -c >> $@;)

#==============================================================================
py:
#==============================================================================
	common/run-all-python.sh

#==============================================================================
clean:
#==============================================================================
	rm -f *.aux *.log *.pdf *.out *.toc *.fls *.fdb_latexmk *.synctex.gz
	rm -f -r *.png figs/
	rm -f -r __pycache__
	rm -f $(BOXES)
